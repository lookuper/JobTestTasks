@{
    ViewBag.Title = "Daxx App";
    @Scripts.Render("~/Scripts/angular.js")
    @Scripts.Render("~/Scripts/angular-route.js")
    @Scripts.Render("~/Scripts/app/users-controller.js")
}

<div id="bodyContainer" ng-app="DaxxApp">
    <div class="container">
        <div class="jumbotron" style="padding-bottom:0px;">
            <h2>Daxx Test App</h2>
        </div>
        <form name="regForm" class="registration" role="form" ng-controller="DaxxCtrl" accept-charset="utf-8">
            <div class="form-group" ng-class="{ 'has-error' : regForm.email.$invalid }">
                <label>Email</label>
                <input type="email" name="email" ng-model="user.email" class="form-control" placeholder="yourname@email.com" required>
                <p class="help-block" ng-show="regForm.email.$invalid">Enter valid email.</p>
            </div>

            <div class="form-group" ng-class="{ 'has-error' : regForm.password.$invalid }">
                <label>Password</label>
                <input type="password" name="password" class="form-control" ng-model="user.password" ng-minlength="3" required>
                <p class="help-block" ng-show="regForm.password.$error.minlength">Min password length is 8 characters.</p>
            </div>

            <div class="form-group" ng-class="{ 'has-error' : regForm.passwordconfirm.$invalid }">
                <label>Confirm Password</label>
                <input type="password" name="passwordConfirm" class="form-control" ng-model="user.passwordConfirm" required compare-to="user.password">
                <p class="help-block" ng-show="regForm.passwordConfirm.$invalid">Passwords not equal.</p>
            </div>

            <div class="form-group" ng-class="{ 'has-error' : regForm.agreement.$invalid }">
                <div class="checkbox">
                    <label><input type="checkbox" name="agreement" required ng-model="user.agreement">Agree to terms</label>
                </div>
                <p class="help-block" ng-show="regForm.agreement.$invalid">Need agree to terms</p>
            </div>

            <button type="button" class="btn btn-lg btn-primary btn-block" ng-disabled="regForm.$invalid" ng-click="next()">Go to step 2</button>
        </form>
    </div>
</div>